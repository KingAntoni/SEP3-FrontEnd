@page "/Login"
@using Microsoft.AspNetCore.Components
@using Model.Model
@using BlazorWASM.Services.Impl
@inject NavigationManager navigationManager
@inject IAuthService authService
<h3>Login</h3>

<EditForm Model="@model" OnValidSubmit="@login">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="email">Username</label>
        <InputText id="email" type="email" class="form-control" @bind-Value="model.Username" />
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <InputText id="password" type="password" class="form-control" @bind-Value="model.Password" />
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
    <button type="submit" class="btn btn-primary" @onclick="Register">Register</button>
</EditForm>

@code {
    private LoginModel model = new LoginModel();
    private string errorLabel="";
    private async Task login()
    {
        try
        {
            await authService.Login(model);
            navigationManager.NavigateTo("/");
        }
        catch (Exception ex)
        {
            errorLabel = ex.Message;
            Console.WriteLine(ex.Message);
        }
    }
    private void Register()
    {
        navigationManager.NavigateTo("/Register");
    }
}
